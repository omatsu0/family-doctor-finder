%h5= @department.department_name

.table-responsive.pt-5
  %table.table.table-sm
    %thead.bg-info.text-white
      %tr
        %th 地区ID
        %th 病院名
        %th よみがな
        %th 診療科
        %th 
    %tbody
      - @department.clinic_departments.each do |department_clinic|
        %tr{"data-link" => "#{clinic_path(department_clinic.clinic.id)}"}
          %td= department_clinic.clinic.location.area.name
          %td= department_clinic.clinic.clinic_name
          %td= department_clinic.clinic.clinic_furigana
          %td= department_clinic.clinic.departments.pluck(:department_name).join(" / ")
          %td
            - if department_clinic.clinic.pdf?
              = link_to clinic_download_path(clinic_id:department_clinic.clinic.id, file_name: department_clinic.clinic.pdf_identifier),method: :get do
                %i.far.fa-file-pdf.mr-3
            = link_to clinic_path(id:department_clinic.clinic.id,anchor: 'location-map'),method: :get do
              %i.fas.fa-map-marked-alt

:javascript
  $("tr[data-link]").click(function() {
    window.location = $(this).data("link")
  })

